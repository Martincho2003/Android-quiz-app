<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="3dp"
                android:color="#AB47BC" />
            <corners android:radius="12dp" />
            <padding
                android:left="12dp"
                android:right="12dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#B0BEC5" />
            <corners android:radius="12dp" />
            <padding
                android:left="12dp"
                android:right="12dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>