<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="?android:attr/windowBackground"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:focusable="true"
    android:importantForAccessibility="yes"
    android:contentDescription="Стая">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/roomIconImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/group"
            android:contentDescription="Иконка на стая"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/roomNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:contentDescription="Име на стаята" />

            <TextView
                android:id="@+id/roomDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Предмети: Биология, Математика | Трудности: Лесно, Трудно | Играчи: 1/4"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="4dp"
                android:contentDescription="Детайли за стаята" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>