<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/download">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_login_button"
            android:gravity="center"
            android:padding="16dp"
            android:shadowColor="#40000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="Избери въпроси"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subjectsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Предмети"
            android:textSize="24sp"
            android:textColor="#021368"
            android:padding="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent" />

        <CheckBox
            android:id="@+id/biologyCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Биология"
            android:drawableStart="@drawable/biology"
            android:drawablePadding="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subjectsTitle" />

        <CheckBox
            android:id="@+id/historyCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="История"
            android:drawableStart="@drawable/history"
            android:drawablePadding="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/biologyCheckBox" />

        <CheckBox
            android:id="@+id/geographyCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="География"
            android:drawableStart="@drawable/geography"
            android:drawablePadding="8dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/historyCheckBox" />

        <TextView
            android:id="@+id/difficultiesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Трудност"
            android:textSize="24sp"
            android:textColor="#021368"
            android:padding="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/geographyCheckBox"
            app:layout_constraintStart_toStartOf="parent" />

        <CheckBox
            android:id="@+id/easyCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Лесно"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/angel"
            android:drawablePadding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/difficultiesTitle" />

        <CheckBox
            android:id="@+id/hardCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/devil"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="Трудно"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/easyCheckBox" />

        <TextView
            android:id="@+id/warningText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ако не изберете нищо, въпросите ще бъдат заредени автоматично от всички категории на случаен принцип."
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:padding="12dp"
            android:background="#FFEBEE"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/hardCheckBox"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/startGameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Започни игра"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/gradient_button"
            android:elevation="4dp"
            android:padding="14dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/warningText"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>